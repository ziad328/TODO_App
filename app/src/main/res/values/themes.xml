<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Todo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">#254875</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/lime</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="floatingActionButtonStyle">@style/fab_style</item>
    </style>

    <style name="Base.Theme.Todo.splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/lime</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.Todo" parent="Base.Theme.Todo" />

    <style name="splash">
        <item name="android:background">@color/lime</item>
    </style>

    <style name="Home">
        <item name="android:background">@color/lime</item>
    </style>

    <style name="toolbar_title_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="bottom_nav_style">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="background_color">
        <item name="android:background">@color/lime</item>
    </style>


    <style name="fabRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="fab_style" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/fabRounded</item>
    </style>

    <style name="add_new_task_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="add_task_btn">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">18dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="date_picker_hint_color">
        <item name="hintTextColor">@color/gray3</item>
    </style>

    <style name="settings_texts">
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/poppins_black</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>